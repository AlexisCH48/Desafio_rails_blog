<h1 class="text-center p-3">Todos los Post</h1>
<%= form_with(url: post_create_path, local: true ) do |f|%>
<div class="container">
  <div class="row row-cols-3"> 
    <div class="form-group p-3">    
      <%= f.label :titulo %>
      <%= f.text_field :title, class:"form-control" %>
    </div>

    <div class="form-group p-3"> 
      <%= f.label :image %>
      <%= f.text_field :image, class:"form-control" %>
    </div>

    <div class="form-group p-3"> 
      <%= f.label :contenido %>
      <%= f.text_field :content, class:"form-control" %>
    </div>
  </div>
  <div class="form-group text-center"> 
    <%= f.submit "Crear Post", class:"btn btn-secondary" %>
  </div>
</div>
<% end %>

  <div class="row row-cols-3">
    <% @posts.each do |post| %>
      <div class="card mb-3" style="max-width: 540px;">
          <div class="row no-gutters m-1">
            <div class="col-md-4">
              <%= image_tag post.image, class: "img-fluid" %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= post.content %></p>
                <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
              </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>